@using WebApp.Models.Enums;
@using System;
@model WebApp.Models.Employee
@{
    ViewData["Title"] = "Employees";
}

<div class="text-center">
    <h2 class="display-4">@ViewData["Title"]</h2>
    <br /><br />
</div>
<div class="text-center">
    <h3>Create</h3>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <div class="col-md-6 border-top">
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Name" class="control-label"></label>
                        </th>
                        <td class="col-sm-6">
                            <input type="text" asp-for="Name" class="form-control text-center" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Surname" class="control-label"></label>
                        </th>
                        <td class="col-sm-6">
                            <input type="text" asp-for="Surname" class="form-control text-center" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </td>
                    </tr>
                     <tr>
                        <th class="col-sm-2">
                            <label asp-for="Email" class="control-label"></label>
                        </th>
                        <td class="col-sm-6">
                            <input type="email" asp-for="Email" class="form-control text-center" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                    </tr>
                     <tr>
                        <th class="col-sm-2">
                            <label asp-for="Salary" class="control-label"></label>
                        </th>
                        <td class="col-sm-6">
                            <input type="number" asp-for="Salary" class="form-control text-center" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">
                            <label asp-for="Profile" class="control-label"></label>
                        </th>
                        <td class="col-sm-6">
                            <select class="form-control text-center">
                                <option value="@Profile.Default">Default</option>
                                <option value="@Profile.Admin">Admin</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div class="form-group gap-2 d-md-flex justify-content-md-center">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
