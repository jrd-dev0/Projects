@model WebApp.Models.Employee
@{
    ViewData["Title"] = "Employees";
}

<div class="text-center">
    <h2 class="display-4">@ViewData["Title"]</h2>
    <br /><br />
</div>

@if (TempData["Success"] is not null)
{
        <div class="alert alert-info alert-dismissible fade show text-center col-5" role="alert">
            <button type="button" class="btn btn-info btn-close" data-bs-dismiss="alert" arial-label="CloseIndexAlertButton_Success"></button>
        @TempData["Success"]
        </div>
}

@if (TempData["Error"] is not null)
{
        <div class="alert alert-danger alert-dismissible fade show text-center col-5" role="alert">
            <button type="button" class="btn btn-danger btn-close" data-bs-dismiss="alert" arial-label="CloseIndexAlertButton_Danger"></button>
        @TempData["Error"]
        </div>
}
<div class="text-center">
    <h3>Details</h3>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-center">
    <div class="col-md-6 border-top">
        <br />
        <table class="table table-borderless">
            <tbody>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <td class="col-sm-6">
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Id)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Name)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Surname)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Email)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Salary)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Salary)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Login)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Login)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.Password)" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RegistrationDate)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.RegistrationDate)" />
                    </td>
                </tr>
                 <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdateDate)
                    </th>
                    <td>
                        <input disabled class="form-control text-center" value="@Html.DisplayFor(model => model.UpdateDate)" />
                    </td>
                </tr>
            </tbody>
        </table>
        <br />
        <div class="gap-2 d-md-flex justify-content-md-center">
            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-outline-secondary" asp-action="Index">Return</a>
        </div>
    </div>
</div>


